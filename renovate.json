{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests"
  ],
  "rangeStrategy": "pin",
  "stabilityDays": 21,
  "dependencyDashboard": true,
  "major": {
    "dependencyDashboardApproval": true,
    "addLabels": [
      "major-upgrade"
    ]
  },
  "vulnerabilityAlerts": {
    "addLabels": [
      "security"
    ]
  },
  "transitiveRemediation": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "matchCurrentVersion": "/^[~^]?0/",
      "dependencyDashboardApproval": true,
      "addLabels": [
        "major-upgrade"
      ]
    }
  ]
}